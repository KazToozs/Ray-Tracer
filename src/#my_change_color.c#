#include "mini.h"

double		my_spec(t_st *s)
{
  t_vect	br;
  double	my_dot;
  double	my_spec;

  my_dot = -dotproduct(s->c.v, s->n) / (length(&s->c.v) * len;
  my_br(s, my_dot, &br);
  my_spec = dotproduct(&br, &s->x.c.v);
  if (my_spec < 0)
    my_spec = 0;
  my_spec = pow(my_spec, s->x.coef);
  return (my_spec);
}

void		my_change_color(t_st *s, double cosin, t_cam *l)
{
  double	ob;
  double	li;
  double	spec;

  ob = ((double)(s->d.colo & 0xFF)) / 255.f;
  li = ((double)(l->color & 0xFF)) / 255.f;
  spec = my_spec(s);
  /* if (spec != 0) */
  /*   printf("%f\n", spec); */
  /* l->r = ((s->d.colo & 0xFF) * (1 - s->x.coef) */
  /* 	  + (l->color & 0xFF) * s->x.coef) * cosin; */
  l->r = 255 * (ob * li * cosin + li * spec);
  /* l->r += 255 * (li * spec); */
  ob = ((double)((s->d.colo >> 8) & 0xFF)) / 255.f;
  li = ((double)((l->color >> 8) & 0xFF)) / 255.f;
  /* l->g = (((s->d.colo >> 8) & 0xFF) * (1 - s->x.coef) */
  /* 	  + ((l->color >> 8) & 0xFF) * s->x.coef) * cosin; */
  l->g = 255 * (ob * li *  cosin + li * spec);
  /* l->g += 255 * (li * spec); */
  ob = ((double)((s->d.colo >> 16) & 0xFF)) / 255.f;
  li = ((double)((l->color >> 16) & 0xFF)) / 255.f;
  /* l->b = (((s->d.colo >> 16) & 0xFF) * (1 - s->x.coef) */
  /* 	  + ((l->color >> 16) & 0xFF) * s->x.coef) * cosin; */
  l->b = 255 * (ob * li * cosin + li * spec);
  /* l->b += 255 * (li * spec); */
  l->type = 1;
  s->d.nb_spots += 1;
}

void    my_change_color_bis(t_st *s)
{
  t_cam	*tmp;
  int	r;
  int	g;
  int	b;

  tmp = s->l;
  r = 0;
  g = 0;
  b = 0;
  while (tmp != NULL)
    {
      if (tmp->type == 1)
	{
	  r += tmp->r;
	  g += tmp->g;
	  b += tmp->b;
	}
      tmp = tmp->next;
    }
  if (r > 255)
    r = 255;
  if (g > 255)
    g = 255;
  if (b > 255)
    b = 255;
  s->d.colo = (r) + (g * 0x100) + (b * 0x10000);
}
